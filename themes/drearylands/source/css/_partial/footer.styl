#footer
  background: color-footer-background
  padding: 50px 0
  border-top: 1px solid color-border
  color: color-grey
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  font-size: 0.85em
  
// NEW -- attributions section
attrborder = 1px dashed color-background
#attributions
  display: flex
  align-items: center
  justify-content: space-between
  margin: 1rem 0
  padding: 1rem 0
  border-bottom: attrborder
  @media mq-mobile
    display: block
  @media mq-normal
    padding-bottom: 1.79rem // Accounting for relative positioning displacement of the 'img-attr' text

[class$="attr"] // NEW
  // flex-grow: 1
  h2
    font-weight: bold
    font-style: italic
    text-align: right
    @media mq-mobile
      text-align: center
      font-style: normal
  &:first-of-type
    [rel="license"] > img
      margin-bottom: 1rem
      margin-right: 0.5rem
      float: left
      @media mq-mobile
        float: none
      margin: 0.5rem
  &:last-of-type
    flex-grow: 3
    margin-left: 0.5rem
  @media mq-mobile
    margin-top: 1rem
    a, span, p
      font-size: 0.85rem

.cc-attr
  @media mq-mobile
    display: flex
    flex-direction: column
    align-items: center
    justify-content: baseline

.img-attr
  position: relative
  @media mq-tablet
    top: 0.79rem
  @media mq-normal
    top: 0.79rem

#footer-closer
  color: color-background
  margin-top: 3rem
  display: flex
  align-items: center
  justify-content: center